<h2>Sign In</h2>

<form action="<%= session_url %>" method="post">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <label>Username:
    <br>
    <%= text_field(:user,:username) %>
  </label>
  <br>
  <br>
  <label>Password:
    <br>
    <%= password_field(:user,:password) %>
  </label>
  <br>
  <br>
  <input type="submit" value="Sign In">
</form>
